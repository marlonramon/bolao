<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="BolaoPU" transaction-type="JTA">
    
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    
    <jta-data-source>jdbc/Bolao</jta-data-source>
    
    <class>org.javaee.bolao.entidades.Usuario</class>
    <class>org.javaee.bolao.entidades.SessaoUsuario</class>
    <class>org.javaee.bolao.entidades.Clube</class>
    <class>org.javaee.bolao.entidades.Bolao</class>
    <class>org.javaee.bolao.entidades.Campeonato</class>
    <class>org.javaee.bolao.entidades.UsuarioBolao</class>
    <class>org.javaee.bolao.entidades.Rodada</class>
    <class>org.javaee.bolao.entidades.Partida</class>
    <class>org.javaee.bolao.entidades.Aposta</class>
        
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    
  </persistence-unit>
</persistence>
